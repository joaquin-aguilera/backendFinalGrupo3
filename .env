MONGODB_URI=mongodb://search_user:search_pass@localhost:5173/searchdb?authSource=searchdb
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=rootpass
PORT=5610

# CORS - Origen del Frontend
FRONTEND_ORIGIN=http://localhost:5620

# Integración API de Productos
# URL del microservicio de publicaciones (desarrollador backend)
PRODUCTS_API_URL=http://localhost:4040/api
PRODUCTS_API_TOKEN=

# Integración con microservicio de publicaciones del Grupo 2 (puerto 4040)
PUBLICATIONS_API_URL=http://localhost:4040/api

# Integración con Servicio de Autenticación
# URL del servicio de autenticación del grupo de autenticación (puerto 3000)
AUTH_SERVICE_URL=http://localhost:3000/api
AUTH_SERVICE_TIMEOUT=5000

# Modo dummy para autenticación (útil para pruebas sin el servicio externo)
# true = Usa archivos JSON dummy (user_dummy_auth.json, user_dummy_anonymous.json)
# false = Conecta con el servicio de autenticación real en AUTH_SERVICE_URL
USE_DUMMY_AUTH=true

# Modo dummy para productos (útil para pruebas sin API de publicaciones)
# true = Siempre usa productos_dummy.json
# false = Intenta conectar con API de publicaciones, si falla lanza error
USE_DUMMY_PRODUCTS=true

# Modo dummy para analytics (útil para pruebas sin datos reales en BD)
# true = Usa clicks_dummy.json y searches_dummy.json si BD está vacía
# false = Solo usa datos reales de BD
USE_DUMMY_ANALYTICS=true

JWT_SECRET=clave_temporal_cambiar_produccion
JWT_EXPIRATION=7d

# Rate limiting más permisivo para desarrollo
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

ENABLE_SECURITY_LOGS=true
LOG_LEVEL=info

IMAGE_CACHE_ENABLED=true
IMAGE_QUALITY=80