# ================================================
# Variables de Entorno - Docker/Producción
# Grupo 3 - Búsqueda y Descubrimiento
# ================================================

# --- SERVIDOR ---
NODE_ENV=production
PORT=5610

# --- BASE DE DATOS ---
# En Docker, usar nombre del servicio (db_mongodb_busqueda) en lugar de localhost
MONGODB_URI=mongodb://search_user:search_pass@db_mongodb_busqueda:27017/searchdb?authSource=searchdb
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=rootpass

# --- CORS ---
# Permitir frontend en Docker
FRONTEND_ORIGIN=http://localhost:5620

# --- INTEGRACIÓN GRUPO 2 (Publicaciones y Multimedia) ---
# En integración completa, usar nombre del servicio del Grupo 2
PUBLICATIONS_API_URL=http://backend_publicaciones:4040/api
PRODUCTS_API_URL=http://backend_publicaciones:4040/api
PRODUCTS_API_TOKEN=

# --- INTEGRACIÓN GRUPO 4 (Autenticación y Perfiles) ---
# En integración completa, usar nombre del servicio del Grupo 4
AUTH_SERVICE_URL=http://backend_auth:3000/api
AUTH_SERVICE_TIMEOUT=5000

# --- MODOS DE OPERACIÓN ---
# Para integración completa, poner todos en false
USE_DUMMY_AUTH=false
USE_DUMMY_PRODUCTS=false
USE_DUMMY_ANALYTICS=false

# --- SEGURIDAD ---
JWT_SECRET=clave_produccion_cambiar_en_deploy_real
JWT_EXPIRATION=7d

# --- RATE LIMITING ---
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# --- LOGGING ---
ENABLE_SECURITY_LOGS=true
LOG_LEVEL=info

# --- IMÁGENES ---
IMAGE_CACHE_ENABLED=true
IMAGE_QUALITY=80
